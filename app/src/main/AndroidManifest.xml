<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bootcamp.censo2021">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_censo2021"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Censo2021">
        <activity android:name="edu.bootcamp.censo2021.View.ModificarPersonaActivity"/>
        <activity android:name="edu.bootcamp.censo2021.View.NuevaPersonaActivity"/>
        <activity android:name="edu.bootcamp.censo2021.View.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.bootcamp.censo2021.View.MainActivity" />
    </application>

</manifest>